:Class Logger
    :Field Private Instance _scopeLog

    ∇ make1(scopeLog)
      :Access Public
      :Implements Constructor
      _scopeLog←scopeLog
    ∇

    ∇ {severity}Log args
      :Access Public Instance
      :If 0=⎕NC'severity'
          severity←1
      :EndIf
      _scopeLog ##.Log (⊂severity),⊆args
    ∇

:EndClass
